{{#section 'head'}}
    <!-- CSS -->
    <link rel="stylesheet" href="../../public/css/explore.css">
    <link rel="stylesheet" href="../../public/css/form.css">
    <link rel="stylesheet" href="/public/css/sidenav.css">
     <script src="../../scripts/landing.js"></script>
{{/section}}

{{>sidebar orgId=org._id}}

<div class="container">
    <!-- Edit Header -->
    <header class="edit-hdr">
        <img class="hdr-pic" src="{{image}}">
        <div style="font-size: 32px;">
            <span class="page-title" id="user-name">{{org.org_name}}</span>
            /
            <span class="page-title">Edit Org</span>
            <p class="hdr-desc">Setup your organization's Nook account</p>
        </div>
    </header>
    <!-- Form -->
    <form method="POST" action="/admin/editorg/{{org._id}}" enctype="multipart/form-data">
        <div class="inner-box">
            <div class="form-wrapper" style="margin:2%">
                <form class="form-wrapper">
                    <div class="sub-form">
                        <div class="form-group">
                            <label>Organization Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control invalid-field" id="user-email-field" value="{{org.org_name}}" name = "edit_org_name" required>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>Profile Bio </label>
                            <div class='input-group date' id="event-about-field">
                                <textarea name = "edit_about_desc" type='text' class="form-control" id="user-bio-field">{{org.about_desc}}</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Recruitment Description </label>
                            <div class='input-group date' id="event-about-field">
                                <textarea name ="edit_join_desc" type='text' class="form-control" id="user-bio-field">{{org.join_desc}}</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Change Header Picture </label>
                            <div class="custom-file">
                                    <input type="file" class="form-control custom-file-input" id="user-photo-field" name = "edit_org_header" accept = ".jpg, .jpeg, png" id = "inputGroupFile02" onchange="validateFileType()">
                                    <label class="custom-file-label" for = "inputGroupFile02">Choose</label>
                                </div>
                        </div>
                        <button id = "editorg" type="submit" id="submit-event" class="custombtn thinbtn mt-0">save</button>
                    </div>
                    
                    <div class="sub-form">
                        <div class="form-group">
                            <label>Email Address</label>
                            <div class="input-group">
                                <input name = "edit_email"type="text" class="form-control" id="user-email-field" value = "{{org.email_url}}">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>Facebook Link</label>
                            <div class="input-group">
                                <input name = "edit_fb_url" type="text" class="form-control" id="user-email-field" value="{{org.fb_url}}">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>Instagram Link</label>
                            <div class="input-group">
                                <input name = "edit_ig_url" type="text" class="form-control" id="user-email-field" value = "{{org.ig_url}}">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </form>
</div>
