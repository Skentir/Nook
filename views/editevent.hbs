{{#section 'head'}}
    <!-- CSS -->
    <link rel="stylesheet" href="../../public/css/explore.css">
    <link rel="stylesheet" href="../../public/css/form.css">
    <link rel="stylesheet" href="/public/css/sidenav.css">
    <!-- Scripts -->
    <script src="../../scripts/moment.js"></script>
    <script src="../../scripts/bootstrap-datepicker.js"></script>
    <script src="../../scripts/landing.js"></script> 
    <script src="../../scripts/orgs.js"></script> 

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.css">
    <!-- Datetimepicker for Bootstrap 4-->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js"></script>
{{/section}}


{{>sidebar orgId=event.organizer_id.0._id}}

<div class="container">
    <!-- Edit Header -->
    <header class="edit-hdr">
        <img class="hdr-pic" src="{{image}}">
        <div>
            <span class="hdr-text" id="user-name">{{event.event_name}}</span>
            /
            <span class="hdr-text">Edit Event</span>
            <p class="hdr-desc">Setup your organization's Nook event</p>
        </div>
    </header>
    <!-- Form -->
    <form id = "event-edit" method = "POST" action = "/admin/editevent/{{event._id}}" enctype="multipart/form-data">
    <div class="inner-box">
        <div class="frm-height mt-4">
                <div class="form-wrapper">
                    <div class="sub-form">
                        <div class="form-group">
                            <label>Event Name</label>
                            <div class="input-group">
                                <input type="text" class="form-control invalid-field" id="event-name-field" value="{{event.event_name}}" name = "edit_event_name">
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <label>Description </label>
                            <div class='input-group date' id="event-about-field">
                                <textarea type='text' class="form-control" id="event-desc-field" name = "edit_about_desc">{{event.about_desc}}</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Things to Bring</label>
                            <div class='input-group date' id="event-about-field">
                                <textarea type='text' class="form-control" id="event-items-field" name = "edit_things">{{event.things}}</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Change Header Picture </label>
                            <div class="custom-file">
                                <label class="custom-file-label">Choose</label>
                                <input type="file" class="form-control custom-file-input" id="event-photo-field" name = "edit_event_photo">
                            </div>
                        </div>
                        <button type="submit" id="edit-event" class="custombtn thinbtn mt-0">save</button>
                    </div>
                    
                    <div class="sub-form">
                        <div class="form-group">
                            <label>Venue</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="event-venue-field" value="{{event.venue}}" name = "edit_venue">
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Date</label>
                                    <div class="input-group date", id = 'datetimepicker4' data-target-input ="nearest">
                                        <input type="text" class="form-control datetimepicker-input" id="event-date-field"
                                            value="{{event.date}}" name = "edit_event_date">
                                        <div class="input-group-append" data-target="#datetimepicker4" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                                <script type="text/javascript">
                                    $(function () {
                                        $('#datetimepicker4').datetimepicker({
                                            format: 'L'
                                        });
                                    });
                                </script>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class='col-sm-6'>
                                <div class="form-group">
                                    <label>Start Time</label>
                                    <div class='input-group date' id ='datetimepicker3' data-target-input="nearest">
                                        <input type='text' class="form-control datetimepicker-input" id="start-time-field" data-target="#datetimepicker3"
                                            value="{{event.start_time}}" name = "edit_start_time">
                                        <div class="input-group-append" data-target="#datetimepicker3" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
                                        </div>
                                    </div>
                                </div>
                                <script type="text/javascript">
                                    $(function () {
                                        $('#datetimepicker3').datetimepicker({
                                            format: 'LT'
                                        });
                                    });
                                </script>
                            </div>
                            <div class='col-sm-6'>
                                <div class="form-group">
                                    <label>End Time</label>
                                    <div class='input-group date' id ='datetimepicker3-2' data-target-input="nearest">
                                        <input type='text' class="form-control datetimepicker-input" id="end-time-field" data-target="#datetimepicker3-2"
                                            value="{{event.end_time}}" name = "edit_end_time">
                                        <div class="input-group-append" data-target="#datetimepicker3-2" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
                                        </div>
                                    </div>
                                </div>
                                <script type="text/javascript">
                                    $(function () {
                                        $('#datetimepicker3-2').datetimepicker({
                                            format: 'LT'
                                        });
                                    });
                                </script>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Incentives</label>
                            <div class='input-group date' id="event-about-field">
                                <textarea type='text' class="form-control" id="event-incentives-field" name="edit_event_incentives">{{event.incentives}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </form> 
    </div>
</div>
